---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/sections/Footer.astro';
import { ArrowLeft } from 'lucide-astro';
import { getLocaleFromUrl } from '../../i18n';

export const prerender = true;

const locale = getLocaleFromUrl(Astro.url);
---

<Layout 
  title="Legal Notice - StriveX | Legal Information & SIRET"
  description="View the legal notice of StriveX: publisher, director of publication, Vercel hosting, intellectual property and GDPR data protection."
>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
    
    <!-- Page header with breadcrumb -->
    <header class="calendly-card bg-[#2d2d2d] text-white py-12 sm:py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-['PPMori'] font-semibold mb-4 sm:mb-6">
          Legal Notice
        </h1>
        <nav aria-label="Breadcrumb">
          <a 
            href="/en" 
            class="inline-flex items-center gap-2 text-gray-300 hover:text-white transition-colors font-['PPMori'] text-sm focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-[#2d2d2d] rounded px-2 py-1"
            aria-label="Return to home page"
          >
            <ArrowLeft class="w-4 h-4" aria-hidden="true" />
            <span>Back to home</span>
          </a>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <article 
        class="bg-white rounded-2xl border border-gray-200 shadow-[0_2px_8px_rgba(0,0,0,0.08)] p-6 sm:p-8 md:p-10"
        aria-labelledby="legal-title"
      >
        <h2 id="legal-title" class="sr-only">StriveX Legal Notice</h2>

        <!-- Section: Website Publisher -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-editor">
          <h3 id="section-editor" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Website Publisher
          </h3>
          <address class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base not-italic">
            <strong class="font-semibold">StriveX</strong><br />
            Sole proprietorship<br />
            <abbr title="Business Identification System" class="no-underline">SIRET</abbr>: 88828980800014<br />
            Address: 108 rue de la Gilarderie, 44200 Nantes, France<br />
            Email: <a href="mailto:contact@strivex.fr" class="text-[#2d2d2d] underline decoration-2 underline-offset-4 hover:text-gray-700 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[#2d2d2d] focus-visible:ring-offset-2 rounded">contact@strivex.fr</a><br />
            Phone: +33 6 51 49 45 73
          </address>
        </section>

        <!-- Section: Director of Publication -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-director">
          <h3 id="section-director" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Director of Publication
          </h3>
          <p class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base">
            Arthur Jean
          </p>
        </section>

        <!-- Section: Hosting -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-hosting">
          <h3 id="section-hosting" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Hosting
          </h3>
          <p class="text-gray-700 leading-relaxed mb-2 font-['PPMori'] text-sm sm:text-base">
            This site is hosted by:
          </p>
          <address class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base not-italic">
            <strong class="font-semibold">Vercel Inc.</strong><br />
            650 California St<br />
            San Francisco, CA 94108<br />
            United States
          </address>
        </section>

        <!-- Section: Intellectual Property -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-ip">
          <h3 id="section-ip" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Intellectual Property
          </h3>
          <p class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base">
            All content on this site (text, images, videos, etc.) is protected by copyright law. 
            Any reproduction, distribution, modification, adaptation, retransmission or publication of these 
            various elements is strictly prohibited without the express written consent of StriveX.
          </p>
        </section>

        <!-- Section: Personal Data Protection -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-data-protection">
          <h3 id="section-data-protection" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Personal Data Protection
          </h3>
          <p class="text-gray-700 leading-relaxed mb-4 font-['PPMori'] text-sm sm:text-base">
            In accordance with the French Data Protection Act of January 6, 1978 as amended and the GDPR, 
            you have the right to access, rectify and delete data concerning you.
          </p>
          <p class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base">
            To exercise this right, contact us at: <a href="mailto:contact@strivex.fr" class="text-[#2d2d2d] underline decoration-2 underline-offset-4 hover:text-gray-700 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[#2d2d2d] focus-visible:ring-offset-2 rounded">contact@strivex.fr</a>
          </p>
          <p class="text-gray-700 leading-relaxed mt-4 font-['PPMori'] text-sm sm:text-base">
            For more information, see our <a href="/en/confidentialite" class="text-[#2d2d2d] underline decoration-2 underline-offset-4 hover:text-gray-700 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[#2d2d2d] focus-visible:ring-offset-2 rounded">privacy policy</a>.
          </p>
        </section>

        <!-- Section: Cookies -->
        <section class="mb-8 sm:mb-10 md:mb-12" aria-labelledby="section-cookies">
          <h3 id="section-cookies" class="text-xl sm:text-2xl font-['PPMori'] font-semibold text-[#2d2d2d] mb-3 sm:mb-4">
            Cookies
          </h3>
          <p class="text-gray-700 leading-relaxed font-['PPMori'] text-sm sm:text-base">
            This site does not use tracking cookies. Only technical cookies necessary 
            for the proper functioning of the site may be used.
          </p>
        </section>

        <!-- Document footer -->
        <footer class="border-t border-gray-200 pt-6 sm:pt-8 mt-8 sm:mt-12">
          <p class="text-gray-600 text-xs sm:text-sm font-['PPMori'] font-normal">
            <time datetime={new Date().toISOString()}>
              Last updated: {new Date().toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </p>
        </footer>
      </article>
    </main>

    <Footer locale={locale} />
  </div>
</Layout>

