---
import { siteConfig } from '../site.config';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import { Navbar } from '../components';
import { getLocaleFromUrl, useTranslations } from '../i18n';

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const {
	title = t('meta.home.title'),
	description = t('meta.home.description'),
	image = siteConfig.ogImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const alternateURL = new URL(locale === 'fr' ? '/en' + Astro.url.pathname : Astro.url.pathname.replace('/en', ''), Astro.site);
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO & Language Meta Tags -->
		<meta http-equiv="content-language" content={locale} />
		<meta name="language" content={locale === 'fr' ? 'French' : 'English'} />
		<meta name="author" content="StriveX" />
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
		<meta name="googlebot" content="index, follow" />
		<meta name="theme-color" content="#3b82f6" />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={siteConfig.keywords.join(', ')} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Alternate languages -->
		<link rel="alternate" hreflang={locale === 'fr' ? 'en' : 'fr'} href={alternateURL} />
		<link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site)} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content={siteConfig.name} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Preconnect to external domains -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- View Transitions -->
		<ClientRouter />

		<!-- Schema.org markup - Professional Service / Freelancer -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "ProfessionalService",
				"name": "StriveX",
				"alternateName": "StriveX - Développeur Freelance Web",
				"description": "StriveX spécialisé dans la création de sites web, landing pages et MVPs. Livraison rapide (14-45 jours), tarifs transparents, accompagnement personnalisé. Idéal pour startups, PME et entrepreneurs.",
				"url": "https://strivex.fr",
				"logo": {
					"@type": "ImageObject",
					"url": "https://strivex.fr/images/logo.png",
					"width": 512,
					"height": 512
				},
				"image": "https://strivex.fr/images/strivex-navigator.png",
				"sameAs": [
					"https://www.linkedin.com/in/arthur-jean-401b56239/"
				],
				"email": "contact@strivex.fr",
				"founder": {
					"@type": "Person",
					"name": "Arthur Jean",
					"jobTitle": "Développeur Full-Stack Freelance",
					"email": "contact@strivex.fr"
				},
				"serviceType": [
					"Développement web",
					"Landing pages sur-mesure",
					"Sites vitrine",
					"MVP SaaS",
					"Sites web pour startups",
					"Développement Next.js",
					"Développement React",
					"Développement Astro"
				],
				"priceRange": "€€",
				"paymentAccepted": ["Virement bancaire", "Stripe"],
				"areaServed": {
					"@type": "Country",
					"name": "France"
				},
				"availableLanguage": ["French", "English"]
			}
		</script>
	</head>
	<body class="antialiased">
		<Navbar locale={locale} />
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		padding-top: 80px;
	}

	/* Hide scrollbar for Chrome, Safari and Opera */
	*::-webkit-scrollbar {
		width: 8px;
	}

	*::-webkit-scrollbar-track {
		background: #f1f1f1;
	}

	*::-webkit-scrollbar-thumb {
		background: #888;
		border-radius: 4px;
	}

	*::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
</style>
